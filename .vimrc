" ============================================================================
" BASIC SETTINGS
" ============================================================================

set showcmd
set number relativenumber
set ttyfast
syntax on

" ============================================================================
" INDENTATION
" ============================================================================

set autoindent expandtab tabstop=2 shiftwidth=2

" ============================================================================
" KEY MAPPINGS
" ============================================================================

" Leader key
nnoremap <SPACE> <Nop>
let mapleader = ' '

" Quick escape
inoremap jk <esc>
